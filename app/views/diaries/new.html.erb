<%= form_with(model: @diary, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control mb-3' %>
    <%= f.label :content, '内容' %>
    <%= f.text_area :content, class: 'form-control', rows: 5 %>
    <%= f.label :image, '画像' %>
    <%= f.file_field :image %>
  </div>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>